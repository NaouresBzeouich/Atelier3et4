@model atelier3.Models.Movie

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Movie</h4>
<hr />
@if (ViewBag.Errors != null)
{
    <div class="text-red ml">
        <ul>
            @foreach (string error in ViewBag.Errors)
            {
                <li class="ml">@error</li>
            }
        </ul>
    </div>
}




<div class="col" style="margin:0% 7% 7%">
    <form asp-action="CreateMovie" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row form-group" style="background-color:lightgrey">
            <label asp-for="Name" class="col-lg-2 control-label"></label>
            <input asp-for="Name" class="col form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="row form-group">
            <label asp-for="MovieAdded" class="col-lg-2 control-label"></label>
            <input asp-for="MovieAdded" class="col form-control" />
            <span asp-validation-for="MovieAdded" class="text-danger"></span>
        </div>

        <div class="row form-group" style="background-color:lightgrey">
            <label asp-for="ImageFile" class="col-lg-2 control-label"></label>
            <input type="file" asp-for="ImageFile" class="col form-control" />
            <span asp-validation-for="ImageFile" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="GenreId" class="control-label"></label>
            <select asp-for="GenreId" class="form-control" asp-items="@ViewBag.Genres"></select>
            <span asp-validation-for="GenreId" class="text-danger"></span>
        </div>

        <div class="row form-group">
            <input type="submit" value="Save Infos" class="col-lg-2 btn btn-primary" />
            <span class="col"></span>
        </div>

        <div class="row form-group" style="background-color:lightgrey">
            <a asp-action="Index" class="col-lg-2 btn btn-success" style="text-decoration: none;">Back to List</a>
            <span class="col"></span>
        </div>
    </form>
</div>





@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}